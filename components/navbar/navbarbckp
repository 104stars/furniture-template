'use client';
import Link from "next/link";
import AvatarComponent from "./avatar";
import DropdownMenuDemo from "./dropdown";
import { DropdownMenuTrigger } from "@radix-ui/react-dropdown-menu";
import { useState } from "react";
import { Menu } from "lucide-react"; // Ensure you have lucide-react installed

export default function Navbar() {
  const [isOpen, setIsOpen] = useState(false);

  const toggleMenu = () => {
    setIsOpen(!isOpen);
  };

  return (
    <header className="sticky top-0 z-10 w-full border-b flex items-center justify-between p-3 pr-10 backdrop-blur-md bg-gray-100 bg-opacity-70">
      <h1 className="flex text-2xl font-montserrat font-bold text-gray-900 dark:text-gray-100">
        MyApp
      </h1>
      <div className="md:hidden">
        <button onClick={toggleMenu} className="p-2 rounded-md text-gray-900 focus:outline-none">
          <Menu />
        </button>
      </div>
      <div className={`flex-col md:flex md:flex-row md:items-center ${isOpen ? 'flex' : 'hidden'} md:flex`}>
        <Link href="/" className="border border-transparent hover:underline p-1 px-3 rounded-full">Home</Link>
        <Link href="#" className="border border-transparent hover:underline p-1 px-3 rounded-full">Features</Link>
        <Link href="#" className="border border-transparent hover:underline p-1 px-3 rounded-full">Contact</Link>
        <DropdownMenuDemo>
          <DropdownMenuTrigger>
            <AvatarComponent />
          </DropdownMenuTrigger>
        </DropdownMenuDemo>
      </div>
    </header>
  );
}
